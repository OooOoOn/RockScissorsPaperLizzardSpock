<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_computer_choice"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/lizard"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/image_human_choice"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image_computer_choice"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        app:srcCompat="@drawable/spock" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_human_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:text="@string/V.S" />

    <EditText
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_computer_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="@string/score_display" />

    <Button
        android:id="@+id/button_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_score"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/button_scissors"
        android:layout_toStartOf="@+id/button_scissors"
        android:text="@string/rock" />

    <Button
        android:id="@+id/button_scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_rock"
        android:layout_alignBottom="@+id/button_rock"
        android:layout_centerHorizontal="true"
        android:text="@string/scissors" />

    <Button
        android:id="@+id/button_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_scissors"
        android:layout_alignBottom="@+id/button_scissors"
        android:layout_toEndOf="@+id/button_scissors"
        android:layout_toRightOf="@+id/button_scissors"
        android:text="@string/paper" />

    <Button
        android:id="@+id/button_lizzard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_below="@+id/button_rock"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="@string/lizzard" />

    <Button
        android:id="@+id/button_Spock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_lizzard"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/spock" />

    <EditText
        android:id="@+id/text_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_rock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Draws: 0"
        android:textAlignment="center" />


</RelativeLayout>